{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "oneOf": [
    {
      "title": "Plan Approval",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["PlanApproval"]
        },
        "plan": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "description": "The name of the plan." },
            "steps": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "step": { "type": "integer", "description": "The step number." },
                  "description": { "type": "string", "description": "The step description." }
                },
                "required": ["step", "description"]
              }
            }
          },
          "required": ["name", "steps"]
        },
        "confirmationRequired": {
          "type": "boolean",
          "description": "Whether the user needs to confirm the plan."
        }
      },
      "required": ["type", "plan", "confirmationRequired"]
    },
    {
      "title": "Plan Selection",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["PlanSelection"]
        },
        "plans": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "description": "The name of the plan." },
              "steps": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "step": { "type": "integer", "description": "The step number." },
                    "description": { "type": "string", "description": "The step description." }
                  },
                  "required": ["step", "description"]
                }
              }
            },
            "required": ["name", "steps"]
          }
        }
      },
      "required": ["type", "plans"]
    },
    {
      "title": "Action Options",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ActionOptions"]
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "description": "The name of the action option." },
              "description": { "type": "string", "description": "A description of the action." }
            },
            "required": ["name", "description"]
          }
        },
        "selectionType": {
          "type": "string",
          "enum": ["single", "multiple", "reject"],
          "description": "Whether the user can pick one option, multiple options, or reject all options."
        }
      },
      "required": ["type", "options", "selectionType"]
    },
    {
      "title": "Input Form",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["InputForm"]
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "description": "The field name." },
              "type": {
                "type": "string",
                "enum": ["text", "textarea", "dropdown", "date", "number", "range"],
                "description": "The type of input field."
              },
              "label": { "type": "string", "description": "The label for the field." },
              "options": {
                "type": "array",
                "items": { "type": "string" },
                "description": "For dropdown fields, a list of available options."
              },
              "min": { "type": "number", "description": "Minimum value for number or range fields." },
              "max": { "type": "number", "description": "Maximum value for number or range fields." },
              "required": { "type": "boolean", "description": "Whether the field is required." }
            },
            "required": ["name", "type", "label"]
          }
        }
      },
      "required": ["type", "fields"]
    },
    {
      "title": "Presentation",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Presentation"]
        },
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["text", "markdown", "link", "image"],
                "description": "The type of content being presented."
              },
              "value": {
                "type": "string",
                "description": "The value of the content. For links, this is the URL; for text or markdown, this is the content itself; for images, this is the image URL."
              },
              "description": {
                "type": "string",
                "description": "An optional description or caption for the content."
              }
            },
            "required": ["type", "value"]
          }
        }
      },
      "required": ["type", "content"]
    }
  ]
}
